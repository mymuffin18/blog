
<div class="mt-4">
  <div class="d-flex justify-content-center">
    <h1><%= @article.title %></h1>
  </div>
  <% if @article.image != nil %>
  <div class="d-flex justify-content-center">
    <%= image_tag @article.image, :style => 'height: 400px' %>
  </div>
  <% end %>
    
  <div class="d-flex justify-content-center">
    <p><%= @article.body %></p>
  </div>
  <div class="d-flex justify-content-center gap-2">
  <%= link_to "Back", articles_path, class: 'btn btn-danger' %>
  <%= link_to "Edit", edit_article_path(@article), class: 'btn btn-success' %>
    
  <%= link_to "Delete", article_path(@article), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
    }, class: 'btn btn-danger' %>
  
  </div>
</div>



